@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-4">
  <div class="h-100 d-flex flex-column align-items-center">
    <h1 class="text-center my-4">Welcome to our Message Board!</h1>
  </div>
  <div class="d-flex flex-row justify-content-center my-4">    
    <ol>
      @foreach (Message message in Model)
      {
        <ul>
          <li>ID: @message.MessageId</li>
          <li>Username: @message.User </li>
          <li>Message Board Name: @message.Name </li>
          <li>Comment: @message.Comment </li>
          <li>Posted: @message.PostDate</li>
        </ul>
        <p>@Html.ActionLink("View Details", "Details", new { id = @message.MessageId})</p>
      }
    </ol>
  </div>
</div>



