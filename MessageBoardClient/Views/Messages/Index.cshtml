@{
    ViewData["Title"] = "Home Page";
}

<h1>New Message:</h1>


<form action="/messages" method="post">

  <label for="name">Message Name</label>
  <input id="name" name="name" type="text">
  <label for="comment">Comment</label>
  <input id="comment" name="comment" type="text">
  <label for="user">User</label>
  <input id="user" name="user" type="text">
  <button type="submit">Go!</button>
</form>

<ol>
@foreach (Message message in Model)
{
    <ul>
        <li>ID: @message.MessageId</li>
        <li>Name: @message.Name</li>
        <li>Species: @message.Comment</li>
        <li>Age: @message.PostDate</li>
        <li>Gender: @message.User</li>
    </ul>
    <a href="/Messages/Details/@(message.MessageId)"><p>View Details</p></a>
    <br>
}
</ol>
